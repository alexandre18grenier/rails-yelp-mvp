<h2><%= @restaurant.name %></h2>
<p>Adress: <%= @restaurant.adress %></p>
<p>Phone: <%= @restaurant.phone %></p>
<p>Reviews:</p>
<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %> |
<%= link_to " Back to the list", restaurants_path %>
